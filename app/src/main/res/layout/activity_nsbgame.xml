<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nsbGame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shuffleboardgameboard"
    tools:context="com.example.aloom.neonshuffleboardv2.NSBGameActivity">

    <ImageView
        android:id="@+id/redPuck1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:cropToPadding="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/zeroPointZone"
        app:layout_constraintRight_toLeftOf="@+id/zeroPointZone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.904"
        app:srcCompat="@drawable/shuffleboardpucksred" />

    <ImageView
        android:id="@+id/redPuck2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:cropToPadding="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/zeroPointZone"
        app:layout_constraintRight_toLeftOf="@+id/zeroPointZone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.904"
        app:srcCompat="@drawable/shuffleboardpucksred" />

    <ImageView
        android:id="@+id/redPuck3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:cropToPadding="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/zeroPointZone"
        app:layout_constraintRight_toLeftOf="@+id/zeroPointZone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.904"
        app:srcCompat="@drawable/shuffleboardpucksred" />

    <ImageView
        android:id="@+id/bluePuck1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:cropToPadding="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/zeroPointZone"
        app:layout_constraintRight_toLeftOf="@+id/zeroPointZone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.904"
        app:srcCompat="@drawable/shuffleboardpucksblue" />

    <ImageView
        android:id="@+id/bluePuck2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:cropToPadding="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/zeroPointZone"
        app:layout_constraintRight_toLeftOf="@+id/zeroPointZone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.904"
        app:srcCompat="@drawable/shuffleboardpucksblue" />

    <ImageView
        android:id="@+id/bluePuck3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:cropToPadding="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/zeroPointZone"
        app:layout_constraintRight_toLeftOf="@+id/zeroPointZone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.904"
        app:srcCompat="@drawable/shuffleboardpucksblue" />

    <view
        android:id="@+id/threePointZone"
        class="android.support.v4.widget.Space"
        id="@+id/view"
        android:layout_width="425dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="52dp" />

    <view
        android:id="@+id/twoPointZone"
        class="android.support.v4.widget.Space"

        android:layout_width="436dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="@+id/threePointZone"
        tools:layout_editor_absoluteY="141dp" />

    <view
        android:id="@+id/onePointZone"
        class="android.support.v4.widget.Space"
        android:layout_width="425dp"
        android:layout_height="35dp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintRight_toRightOf="@+id/threePointZone"
        tools:layout_editor_absoluteY="100dp" />

    <view
        android:id="@+id/zeroPointZone"
        class="android.support.v4.widget.Space"
        android:layout_width="829dp"
        android:layout_height="876dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="191dp" />

</android.support.constraint.ConstraintLayout>
